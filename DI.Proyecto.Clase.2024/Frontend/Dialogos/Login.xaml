<mah:MetroWindow
    x:Class="DI.Proyecto.Clase._2024.Frontend.Dialogos.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DI.Proyecto.Clase._2024.Frontend.Dialogos"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="700"
    Background="#252525"
    ShowCloseButton="False"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    ShowTitleBar="False"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Source="/Recursos/Imagenes/portatil.jpg" />
        <StackPanel Orientation="Horizontal">
            <Image
                Height="30"
                Margin="20,20,10,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="1.377,0.962"
                Source="/Recursos/Iconos/matisse.png" />
            <TextBlock
                Margin="5,15,0,0"
                VerticalAlignment="Top"
                FontSize="30"
                Foreground="White"
                Text="MATISSE" />
        </StackPanel>

        <TextBlock
            Margin="100,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="30"
            Foreground="White"
            Text="Aplicación Inventario IES Henri Matisse"
            TextWrapping="Wrap" />

        <StackPanel
            Grid.Column="1"
            Margin="90,0,90,0"
            VerticalAlignment="Top">
            <TextBlock
                Margin="0,100,0,0"
                FontSize="25"
                Foreground="LightGray"
                Text="Login" />

            <TextBlock
                Margin="0,30,0,0"
                Foreground="LightGray"
                Text="Username" />
            <TextBox
                x:Name="txtUsername"
                Background="#333333"
                BorderBrush="Transparent"
                Style="{StaticResource MahApps.Styles.TextBox}" />

            <TextBlock
                Margin="0,30,0,0"
                Foreground="LightGray"
                Text="Password" />
            <PasswordBox
                x:Name="passClaveAcceso"
                Background="#333333"
                BorderBrush="Transparent"
                Style="{StaticResource MahApps.Styles.PasswordBox}" />

            <Button
                x:Name="btnLogin"
                Margin="0,20,0,0"
                Background="#304fff"
                Click="btnLogin_Click"
                Content="Login"
                IsDefault="true" />

            <Button
                BorderBrush="Transparent"
                Content="Forgot Password?"
                Style="{StaticResource MaterialDesignOutlinedButton}" />

        </StackPanel>
        <StackPanel
            Grid.Column="1"
            Margin="0,0,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Padding="0"
                HorizontalContentAlignment="Right"
                BorderBrush="Transparent"
                Content="SIGN UP"
                Foreground="#336795"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
            <mat:PackIcon
                VerticalAlignment="Center"
                Foreground="#336795"
                Kind="Account" />

        </StackPanel>
    </Grid>
</mah:MetroWindow>
